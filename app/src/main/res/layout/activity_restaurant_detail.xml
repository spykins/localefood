<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RestaurantDetail">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="@dimen/restaurant_details_width"
        android:layout_height="@dimen/restaurant_details_name_height"
        android:layout_marginTop="@dimen/default_view_margin"
        android:layout_marginEnd="@dimen/default_view_margin"
        android:textAlignment="center"
        android:textSize="@dimen/restaurant_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tim Hortons" />

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="@dimen/restaurant_details_width"
        android:layout_height="@dimen/restaurant_details_address_height"
        android:layout_marginStart="@dimen/default_view_margin"
        android:layout_marginTop="@dimen/restaurant_details_margin_top"
        android:layout_marginEnd="@dimen/default_view_margin"
        android:lineSpacingExtra="@dimen/restaurant_details_line_space"
        android:paddingStart="@dimen/restaurant_address_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView"
        tools:text="Address: %1$s  \nCity: %2$s \nState: %3$s \nCountry: %4$s \nPostalCode: %5$s" />
</android.support.constraint.ConstraintLayout>